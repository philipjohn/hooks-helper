    "require-dev": {
        "phpunit/phpunit": "^9.6",
        "yoast/phpunit-polyfills": "^4.0"
    },
    "scripts": {
        "test": "wp-env run tests-cli wp-content/plugins/wp-hooks-helper/vendor/bin/phpunit -c wp-content/plugins/wp-hooks-helper/phpunit.xml.dist"
