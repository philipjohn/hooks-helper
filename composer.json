{
    "name": "philipjohn/hooks-helper",
    "description": "Register hooks in WordPress using just the method name.",
    "version": "1.0.0",
    "type": "library",
    "keywords": ["wordpress", "hooks", "actions", "filters", "classes"],
    "homepage": "https://philipjohn.me.uk/hooks-helper",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Philip John",
            "email": "hookshelper@philipjohn.me.uk",
            "homepage": "https://philipjohn.me.uk",
            "role": "Developer"
        }
    ],
    "autoload": {
        "psr-4": {
            "PJ\\HooksHelper\\": "src/"
        }
    },
    "archive": {
        "exclude": [ "/*.php" ]
